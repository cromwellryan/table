<div class="gameview">
  <h2 class="gameview--main">Current Match</h2>
  <div class="gameview--current">
  <div class="player--content player--home">
    <span class="player--name">{{home.name}}</span>
    <span class="overall--score">{{homeScore}}</span>
  </div>
  <div class="player--content player--away">
    <span class="overall--score">{{awayScore}}</span>
    <span class="player--name">{{away.name}}</span>
  </div>
  <div class="gameview--actions">
    {{#each roundsWithIndex}}
    <h3 class="gameview--header">Game {{index}}</h3>
    {{#with round}}
      {{#unless this.isComplete}}{{#if this.isCurrent}}Game Active{{/if}}
      {{else}}
        {{#if this.isCurrent}} 
        <button {{action newRound}} class="button blue">New Game</button>
        <button {{action endGame}} class="button black">Match Over!</button>
        {{/if}}
      {{/unless}}
    <div class="actions actions--home">
      {{#unless this.isComplete}}{{#if this.isCurrent}}<button {{action addPointHome}} class="button green">+</button>{{/if}}{{/unless}}
      <span class="score">{{homeScore}}</span>
      {{#unless this.isComplete}}{{#if this.isCurrent}}<button {{action subtractPointHome}} class="button red">-</button>{{/if}}{{/unless}}
    </div> 
    <div class="actions actions--away">
      {{#unless this.isComplete}}{{#if this.isCurrent}}<button {{action subtractPointAway}} class="button red">-</button>{{/if}}{{/unless}}
      <span class="score">{{awayScore}}</span>
      {{#unless this.isComplete}}{{#if this.isCurrent}}<button {{action addPointAway}} class="button green">+</button>{{/if}}{{/unless}}
    </div>
    <div class="gameview--end">
      {{#unless this.isComplete}}{{#if this.isCurrent}}<button {{action endRound this}} class="button blue">End Round</button>{{/if}}
      {{else}}
        {{#if this.isCurrent}} 
        Game Over!
        {{/if}}
      {{/unless}}
    </div>
    {{/with}}
    {{/each}}
  </div>
</div>
